<% content_for :title do%>
  <%= @tag.name.capitalize %> complaints
<% end %>

<% if signed_in? %>

  <%= render "shared/sidebar" %>
<br>
<% @posts.each do |post| %>
  <%= render post %>
<% end %>

<% if @posts.length>10 %>
    <%= render 'shared/loadmore' %>
<% end %>

<% if @posts.length==0 %>
  <div>No posts are active in this category.</div>
<% end %>

<% else %>

  <%= render 'shared/unsigned' %>

<%end%>
